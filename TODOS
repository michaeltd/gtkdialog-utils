export TODOFILE="${HOME}/.$(basename "${BASH_SOURCE[1]}").todos"

#shellcheck disable=SC2155 # GO HOME SHELLCHECK, YOU'RE DRUNK!!!
export TODOS='
<window title="Todos" resizable="true">
  <frame Todos>
    <vbox>
      <edit>
        <input file>'"${TODOFILE}"'</input>
	    <output file>'"${TODOFILE}"'</output>
		<variable export="true">TODOS</variable>
		<action signal="show" function="refresh">TODOS</action>
      </edit>
      <hbox>
	  <button ok></button>
	  <button cancel></button>
	  <button image-position="0">
		<label>"Save"</label>
		<input file stock="gtk-save"></input>
		<action>echo "Saving Todos"</action>
		<action function="Save">TODOS</action>
	  </button>
      </hbox>
    </vbox>
  </frame>
</window>'
